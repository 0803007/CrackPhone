<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nchc.crackphone"
    android:versionCode="7"
    android:versionName="0.27" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="nchc.crackphone.MainActivity"
            android:hardwareAccelerated="true"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="nchc.crackphone.ImageShowActivity" />
        <!--
        <activity
            android:name="com.example.crackphone.RedDeteciotnActivity"
            android:label="@string/title_activity_red_deteciotn" >
        </activity>
        -->
        <activity
            android:name="nchc.crackphone.RedDetectionActivity"
            android:label="@string/title_activity_red_detection" >
        </activity>
        <activity
            android:name="nchc.crackphone.CameraPreviewActivity"
            android:label="@string/title_activity_camera_preview" >
>
        </activity>
    </application>

</manifest>